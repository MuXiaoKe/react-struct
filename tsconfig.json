{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": false,
        "rootDirs": [
            "./src"
        ],
        "baseUrl": "./src",
        "paths": {
            "@src/*": ["*"],
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@router/*": ["router/*"],
            "@store/*": ["store/*"],
            "@utils/*": ["utils/*"],
        },
        "jsx": "react",
        "alwaysStrict": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        //使用装饰器
        "experimentalDecorators": true,
        "lib": [
            "esnext",
            "es7",
            "es6",
            "es5",
            "es2015.promise",
            "es2015.generator",
            "dom"
        ],
        "skipLibCheck": true,
        "typeRoots": [
            "node",
            "node_modules/@types"
        ],
        "strict": true
    },
    "include": [ // 添加包含的文件和排除的文件，增加性能
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
